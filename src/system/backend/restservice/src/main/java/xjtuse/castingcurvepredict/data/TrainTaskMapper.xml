<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xjtuse.castingcurvepredict.data.TrainTaskMapper">
  <select id="getTaskById" resultType="TrainTask">
    select * from Task where Id = #{id}
  </select>
  <select id="getTasks" resultType="TrainTask">
    SELECT * FROM Task
  </select>
  <select id="getWorkingTasks" resultType="TrainTask">
    SELECT * FROM Task WHERE status = 'Training' or status = 'Updating'
  </select>
  <insert id="createTask" useGeneratedKeys="true" keyProperty="Id" parameterType="TrainTask">
    INSERT INTO Task (`Epoch`, `Loss`, `Status`, `ModelId`) VALUES (${Epoch}, ${Loss}, '${status}', ${ModelId})
  </insert>
  <delete id="deleteModelById">
    DELETE FROM `MLModel` WHERE (`Id` = '${id}')
  </delete>
  <insert id="createModel" useGeneratedKeys="true" keyProperty="Id" parameterType="MlModel">
    INSERT INTO `MLModel` (`Path`, `Loss`, `Name`, `Status`) VALUES ('${Path}', '${mLoss}', '${Name}', '${mStatus}');
  </insert>
  <delete id="deleteTaskById">
    DELETE FROM `Task` WHERE (`Id` = '${id}')
  </delete>
</mapper>